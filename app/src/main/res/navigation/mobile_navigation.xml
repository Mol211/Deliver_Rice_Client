<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.mol21.cliente_deliveryrice.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_arrocesFragment"
            app:destination="@id/arrocesFragment" />
        <action
            android:id="@+id/action_nav_home_to_carritoFragment"
            app:destination="@id/carritoFragment" />
    </fragment>

    <fragment
        android:id="@+id/nav_gallery"
        android:name="com.mol21.cliente_deliveryrice.ui.pedidos.PedidosFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_pedidos" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.mol21.cliente_deliveryrice.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/arrocesFragment"
        android:name="com.mol21.cliente_deliveryrice.ui.arroces.ArrocesFragment"
        android:label="@string/title_fragment_arroces"
        tools:layout="@layout/fragment_arroces" >
        <action
            android:id="@+id/action_arrocesFragment_to_carritoFragment"
            app:destination="@id/carritoFragment" />
    </fragment>
    <fragment
        android:id="@+id/carritoFragment"
        android:name="com.mol21.cliente_deliveryrice.ui.carrito.CarritoFragment"
        android:label="fragment_carrito"
        tools:layout="@layout/fragment_carrito" />
</navigation>